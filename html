    <script>
        // Advanced Animations
        function createHeartBurst() {
            for(let i = 0; i < 50; i++) {
                const heart = document.createElement('div');
                heart.style.position = 'fixed';
                heart.style.left = `${Math.random() * 100}%`;
                heart.style.top = `${Math.random() * 100}%`;
                heart.style.fontSize = `${Math.random() * 30 + 20}px`;
                heart.style.animation = `float ${Math.random() * 3 + 2}s ease-out`;
                heart.innerHTML = 'üíñ';
                document.body.appendChild(heart);
                setTimeout(() => heart.remove(), 2000);
            }
        }

        // Personalized Message
        function personalizeMessage() {
            const name = document.getElementById('loverName').value || 'My Love';
            const messages = [
                `${name}, you're my forever and always üåπ`,
                `To ${name}, my soulmate in every way üíë`,
                `${name}, our love story is my favorite üíç`,
                `With ${name}, every moment is magic ‚ú®`
            ];
            
            document.getElementById('personalMessage').innerHTML = 
                messages[Math.floor(Math.random() * messages.length)];
            document.getElementById('personalMessage').style.display = 'block';
            
            // Animate progress bar
            document.getElementById('loveProgress').style.width = '100%';
        }

        // Interactive Background
        function createFloatingHearts() {
            setInterval(() => {
                const heart = document.createElement('div');
                heart.style.position = 'fixed';
                heart.style.left = `${Math.random() * 100}%`;
                heart.style.fontSize = `${Math.random() * 20 + 10}px`;
                heart.style.animation = `float ${Math.random() * 5 + 3}s linear`;
                heart.innerHTML = ['üíñ', 'üíù', 'üíò', 'üíó'][Math.floor(Math.random() * 4)];
                document.body.appendChild(heart);
                setTimeout(() => heart.remove(), 5000);
            }, 300);
        }

        // Initialize
        window.addEventListener('load', () => {
            createFloatingHearts();
            // Add background music
            const audio = new Audio('https://assets.mixkit.co/music/preview/mixkit-romantic-chopin-219.mp3');
            audio.loop = true;
            audio.play().catch(() => {}); // Handle autoplay restrictions
        });
    </script>
</body>
